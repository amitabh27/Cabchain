<h2 class="page-header">Personal Information</h2>
{{#if errors}}
      {{#each errors}}
        <div class="alert alert-danger">{{msg}}</div>
      {{/each}}
{{/if}}
<form method="post" action="/users/register">


  <div class="form-group">
    <label>Aadhaar ID</label>
    <input type="text" class="form-control" placeholder="XXXXYYYYZZZZ" name="uid">
  </div>
    <div class="form-group">
    <label>Name</label>
    <input type="text" class="form-control" placeholder="Name" name="name">
  </div>
    <div class="form-group">
    <label>Gender</label>
    <input type="text" class="form-control" placeholder="male or female" name="gender">
  </div>
    <div class="form-group">
    <label>Address</label>
    <input type="text" class="form-control" placeholder="Postal Address" name="address">
  </div>
    <div class="form-group">
    <label>Date of birth</label>
    <input type="text" class="form-control" placeholder="DDMMYYYY" name="dob">
  </div>
  
  <br><br>
  
<h2 class="page-header">Vehicle Information</h2>
    <div class="form-group">
    <label>Registration Number</label>
    <input type="text" class="form-control" placeholder="eg. MH06 KA 4792" name="regnumber">
  </div>
    <div class="form-group">
    <label>Chassis Number</label>
    <input type="text" class="form-control" placeholder="eg. FT3763412" name="chassis">
  </div>
    <div class="form-group">
    <label>Engine Number</label>
    <input type="text" class="form-control" placeholder="eg. GCHonda 7834" name="engine">
  </div>


  <button type="submit" class="btn btn-default">Submit</button>
</form>